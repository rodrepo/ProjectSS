@using ProjectSS.Common
@using System.Linq
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var canAccessAdmin = User.IsInRole(RoleType.OM.ToString());
}
@if (canAccessAdmin)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>Users</h4>
                        </div>
                        <div class="col-sm-6">
                            <div class="pull-right">
                                <a class="btn btn-labeled btn-success btn-xs" href="@Url.Action("Create", "User")">
                                    <span class="btn-label"><i class="fa fa-plus"></i></span>
                                    Add User
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table id="datatable1" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Status</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var u in Model)
                                {
                                    if (u.IsDeleted != true)
                                    {
                                        <tr>
                                            <td>@u.Displayname</td>
                                            <td>@u.Email</td>
                                            <td>@u.Mobile</td>
                                            <td>
                                                @if (u.IsActive)
                                                {
                                                    <a>Activated</a>
                                                }
                                                else
                                                {
                                                    <a>Deactived</a>
                                                }
                                            </td>
                                            <td>
                                                @foreach (var role in u.Roles)
                                                {
                                                    if (u.Roles.Count > 1)
                                                    {
                                                        <p>
                                                            @role.Name,
                                                        </p>
                                                    }
                                                    else
                                                    {
                                                        <p>
                                                            @role.Name
                                                        </p>
                                                    }

                                                }
                                            </td>
                                            <td>
                                                <a data-toggle="tooltip" data-placement="top" title="Edit" href="@Url.Action("Edit", "User", new { id = u.Id })" class="btn btn-primary btn-xs"><i class="icon-menu"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
    <script type="text/javascript">
        $(document).ready(function () {
            if ('@TempData["Error"]' != "") {
                $.notify('@TempData["Error"]', "danger");
            }
            if ('@TempData["Success"]' != "") {
                $.notify('@TempData["Success"]', "success");
            }
            if ('@TempData["Info"]' != "") {
                $.notify('@TempData["Info"]', "info");
            }
            if ('@TempData["Warning"]' != "") {
                $.notify('@TempData["Warning"]', "warning");
            }
        });
    </script>
}