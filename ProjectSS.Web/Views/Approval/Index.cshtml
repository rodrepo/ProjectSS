@model List<ProjectSS.Web.Models.BudgetRequestViewModel>
@{
    ViewBag.Title = "Approval";
}
<h3>
    Approval Page
    <ol class="breadcrumb">
        <li>
            <a href="/Home">Home</a>
        </li>
        <li class="active">List of Budget Requests</li>
    </ol>
</h3>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table id="datatable1" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Project No.</th>
                            <th>Requestor</th>
                            @*<th>Purpose</th>*@
                            <th>Date Needed</th>
                            @*<th>Total Amount</th>*@
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RequestNumber</td>
                                <td>@item.ProjectNumber</td>
                                <td>@item.RequestorName</td>
                                @*<td>@item.Purpose</td>*@
                                @if (item.DateNeeded != null)
                                {
                                    <td>@item.DateNeeded.Value.ToShortDateString()</td>
                                }
                                else
                                {
                                    <td> </td>
                                }
                                @*<td>@item.TotalAmount.ToString("P" + " " + "#,0.00")</td>*@
                                <td>
                                    @if (item.StatusRecommendingApproval == true && item.StatusApproval == false && item.StatusRelease == false)
                                    {
                                        <div class="label label-purple">Recommending Approval</div>
                                    }
                                    else if (item.StatusRecommendingApproval == true && item.StatusApproval == true && item.StatusRelease == false)
                                    {
                                        <div class="label label-warning">Approval</div>
                                    }
                                    else if (item.StatusRecommendingApproval == true && item.StatusApproval == true && item.StatusRelease == true)
                                    {
                                        <div class="label label-success">Release</div>
                                    }
                                    else
                                    {
                                        <div class="label label-info">Pedding</div>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" data-toggle="dropdown" class="btn btn-primary btn-xs"><i class="icon-menu"></i></button>
                                        <ul role="menu" class="dropdown-menu">
                                            <li>
                                                <a href="#" data-toggle="modal" data-target="#approved-@item.Id">Approved</a>
                                            </li>
                                            @*<li>
                                                <a href="#" data-toggle="modal" data-target="#deletemodal-@item.Id" style="color:red">Delete</a>
                                            </li>*@
                                        </ul>
                                    </div>
                                
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                @*<div>
                        <p><b>Total: <i>@Model.Sum(m => m.TotalAmount).ToString("P" + " " + "#,0.00")</i></b></p>
                    </div>*@
            </div>
        </div>
    </div>
</div>

@section BodyArea {
    @foreach (var item in Model)
    {
        <div id="approved-@item.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabelSmall" aria-hidden="true" class="modal fade">
            <div class="modal-dialog modal-sm">
                @using (Html.BeginForm("Approved", "Approval", new { @id = item.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 id="myModalLabelSmall" class="modal-title">Approval</h4>
                        </div>
                        <div class="modal-body"><span>Are you sure you want to approved this request?</span></div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success ">Yes</button>
                            <a href="" type="button" class="btn btn-info" data-dismiss="modal">No</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
    <script type="text/javascript">
        $(document).ready(function () {
            if ('@TempData["Error"]' != "") {
                $.notify('@TempData["Error"]', "danger");
            }
            if ('@TempData["Success"]' != "") {
                $.notify('@TempData["Success"]', "success");
            }
            if ('@TempData["Info"]' != "") {
                $.notify('@TempData["Info"]', "info");
            }
            if ('@TempData["Warning"]' != "") {
                $.notify('@TempData["Warning"]', "warning");
            }
        });
    </script>
}

