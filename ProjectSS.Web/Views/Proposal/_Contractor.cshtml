@model ProjectSS.Web.Models.ProposalContractorModel
@{
    ViewBag.Title = "_Staff";
}
@Html.HiddenFor(m => m.ProposalId)
<div class="modal-body row">
    <div class="form-group col-sm-12">
        <label>Name</label>
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required", @placeholder = "Enter Contractor/Outsource Name"})
    </div>
    <div class="form-group col-sm-12">
        <label>Description</label>
        @Html.TextAreaFor(model => model.Description, new { @row = "4", @class = "form-control", @required = "required", @placeholder = "Enter Description" })
    </div>
    <div class="form-group col-sm-12">
        <label>No. of Day</label>
        @Html.TextBoxFor(model => model.NoOfDay, new { @class = "form-control", @type = "number", @required = "required" })
    </div>
    <div class="form-group col-sm-12">
        <label>Billing Rate</label>
        @Html.TextBoxFor(model => model.Rate, new { @class = "form-control", @type = "number", @required = "required" })
    </div>
    <div class="form-group col-sm-12">
        <label>Factor</label>
        <select class="form-control" id="Factor" name="Factor" required="required">
            <option value="">Select Factor</option>
            <option @(Model.Factor == decimal.Parse("1.2") ? "selected" : " ") value="1.2">1.2</option>
            <option @(Model.Factor == decimal.Parse("1.3") ? "selected" : " ") value="1.3">1.3</option>
            <option @(Model.Factor == decimal.Parse("1.4") ? "selected" : " ") value="1.4">1.4</option>
            <option @(Model.Factor == decimal.Parse("1.5") ? "selected" : " ") value="1.5">1.5</option>
        </select>
    </div>
    <div class="form-group col-sm-offset-2 col-sm-8">
        <h5 style="color:red" align="center">Warning : Please double check values before pressing <i><b>Save</b></i> entered values will not be <b>edited</b></h5>
    </div>
</div>


