@model ProjectSS.Web.Models.ProposalViewModel
@{
    ViewBag.Title = "_Create";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 id="myModalLabelSmall" class="modal-title">Create Proposal</h4>
    </div>
    <div class="modal-body row" style="margin:10px">
        <div class="form-group col-sm-12">
            <div class="row">
                <label>CRM</label>
                @Html.DropDownListFor(model => model.CRMId, (List<SelectListItem>)ViewBag.CRMs, "Select CRM", new { @class = "chosen-select input-md form-control", @required = "required", })
            </div>
        </div>
        <div class="form-group col-sm-12">
            <div class="row">
                <label>Business Developement</label>
                @Html.DropDownListFor(model => model.BDId, (List<SelectListItem>)ViewBag.BDs, "Select Business Developement", new { @class = "chosen-select input-md form-control", @required = "required", })
            </div>
        </div>
        <div class="form-group col-sm-12">
            <div class="row">
                <label>Technical Head</label>
                @Html.DropDownListFor(model => model.THId, (List<SelectListItem>)ViewBag.THs, "Select Technical Head", new { @class = "chosen-select input-md form-control", @required = "required", })
            </div>
        </div>
        <div class="form-group col-sm-12">
            <div class="row">
                <label>Technical Specialist</label>
                @Html.DropDownListFor(model => model.TSId, (List<SelectListItem>)ViewBag.TSs, "Select Technical Specialist", new { @class = "chosen-select input-md form-control", @required = "required", })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Create</button>
        <a href="" type="button" class="btn btn-info" data-dismiss="modal">Back</a>
    </div>
</div>
