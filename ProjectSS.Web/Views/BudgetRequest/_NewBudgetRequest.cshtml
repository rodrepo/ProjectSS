@model ProjectSS.Web.Models.NewBudgetRequestModel
@{
    ViewBag.Title = "_Create";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 id="myModalLabelSmall" class="modal-title">New Request</h4>
    </div>
    <div class="modal-body row" style="margin:10px">
        <label>Project</label>
        @Html.DropDownListFor(model => model.ProjectId, (List<SelectListItem>)ViewBag.Projects, "Select Project", new { @class = "form-control", @required = "required", })
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Request</button>
        <a href="" type="button" class="btn btn-info" data-dismiss="modal">Back</a>
    </div>
</div>
