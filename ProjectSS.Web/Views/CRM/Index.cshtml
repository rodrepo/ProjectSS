@using System.Web.WebPages;
@model List<ProjectSS.Web.Models.CRMViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-6">
                        <h4>List of CRM</h4>
                    </div>
                    <div class="col-sm-6">
                        <div class="pull-right">
                            <a class="btn btn-labeled btn-success" href="@Url.Action("Create", "CRM")">
                                <span class="btn-label"><i class="fa fa-plus"></i></span>
                                New CRM
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table id="datatable1" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Company</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var u in Model)
                            {
                                <tr>
                                    <td>@u.Name</td>
                                    <td>@u.CompanyName</td>
                                    <td>
                                        @if(u.MobileNo != null && !u.MobileNo.IsEmpty())
                                        {
                                            @u.MobileNo
                                        }
                                        else if (u.OfficeNo != null && !u.OfficeNo.IsEmpty())
                                        {
                                            @u.OfficeNo
                                        }
                                    </td>
                                    <td>@u.Email</td>
                                    <td>
                                        <a data-toggle="tooltip" data-placement="top" title="Edit" href="@Url.Action("Edit", "CRM", new { id = u.Id })" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



