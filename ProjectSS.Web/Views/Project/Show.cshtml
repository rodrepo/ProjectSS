@model ProjectSS.Web.Models.ProjectViewModel
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        Project Number: @Model.ProjectNo
    </div>
    <div class="panel-body">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-md-4">
                    <p class="lead bb">Details</p>
                    <form class="form-horizontal p-20">
                        <div class="form-group">
                            <div class="col-sm-5">Title: </div>
                            <div class="col-sm-7">
                                <strong>@Model.ProposalTitle</strong>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5">Company Name: </div>
                            <div class="col-sm-7">
                                <strong>@Model.ProposalModel.CompanyName</strong>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5">Industry: </div>
                            <div class="col-sm-7">
                                <strong>@Model.ProposalModel.Industry</strong>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5">Description: </div>
                            <div class="col-sm-7">
                                <strong>@Model.ProposalModel.Description</strong>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                    <p class="lead bb">&nbsp;</p>
                    <form class="form-horizontal p-20">
                        <div class="form-group">
                            <div class="col-sm-5">Contact Person: </div>
                            <div class="col-sm-7">
                                <strong>@Model.ProposalModel.ContactPerson</strong>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5">Position: </div>
                            <div class="col-sm-7">
                                <strong>@Model.ProposalModel.ContactPersonPosition</strong>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5">Location: </div>
                            <div class="col-sm-7">
                                <strong>@Model.ProposalModel.Location</strong>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                    <p class="lead bb">&nbsp;</p>
                    <form class="form-horizontal p-20">
                        <div class="form-group">
                            <div class="col-sm-5">Business Developement: </div>
                            <div class="col-sm-7">
                                <strong>@Model.BDName</strong>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5">Technical Head: </div>
                            <div class="col-sm-7">
                                <strong>@Model.THName</strong>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-5">Technical Specialist: </div>
                            <div class="col-sm-7">
                                <strong>@Model.TSName</strong>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




