@model List<ProjectSS.Web.Models.ProjectViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>
    List of Projects
    <ol class="breadcrumb">
        <li>
            <a href="/Home">Home</a>
        </li>
        <li class="active">Projects</li>
    </ol>
</h3>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table id="datatable1" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="col-sm-2">No.</th>
                            <th class="col-sm-3">Title</th>
                            <th class="col-sm-4">Contact Person</th>
                            <th class="col-sm-2">Budget status</th>
                            @*<th>Company</th>
                            <th>Location</th>*@
                            <th class="col-sm-1">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var u in Model)
                            {
                                <tr>
                                    <td>@u.ProjectNo</td>
                                    <td>@u.ProposalTitle</td>
                                    <td>@u.CRMName</td>
                                    @*<td>@u.ProposalModel.CompanyName</td>
                                    <td>@u.ProposalModel.Location</td>*@
                                    <td>
                                        <div class="progress progress-striped progress-xs" style="width:60%">
                                            <div role="progressbar" aria-valuenow="@u.Progress" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar-@u.Color progress-@u.Progress">
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a data-toggle="tooltip" data-placement="top" title="Manage" href="@Url.Action("Show", "Project", new { id = u.Id })" class="btn btn-primary btn-xs"><i class="icon-menu"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
    <script type="text/javascript">
        $(document).ready(function () {
            if ('@TempData["Error"]' != "") {
                $.notify('@TempData["Error"]', "danger");
            }
            if ('@TempData["Success"]' != "") {
                $.notify('@TempData["Success"]', "success");
            }
            if ('@TempData["Info"]' != "") {
                $.notify('@TempData["Info"]', "info");
            }
            if ('@TempData["Warning"]' != "") {
                $.notify('@TempData["Warning"]', "warning");
            }
        });
    </script>
}

 