@model List<ProjectSS.Web.Models.ProjectViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>
    List of Projects
    <ol class="breadcrumb">
        <li>
            <a href="/Home">Home</a>
        </li>
        <li class="active">Projects</li>
    </ol>
</h3>


<div class="row">
    @foreach (var project in Model)
    {
      <div class="col-lg-3">
        <!-- START panel-->
        <div id="panelDemo1" class="panel panel-primary">
            <div class="panel-heading">
                Project @project.ProjectNo
                <a href="#" data-tool="panel-collapse" data-toggle="tooltip" title="Collapse Panel" class="pull-right">
                    <em class="fa fa-minus"></em>
                </a>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <p>@project.ProposalTitle</p>
                    <p>@project.CRMName</p>
                </div>
                <div class="panel-footer">
                <a  style="color:blue" href="@Url.Action("Show", "Project", new { id = project.Id })">Show</a>
                </div>
            </div>
        </div>
        <!-- END panel-->
    </div>
    }
