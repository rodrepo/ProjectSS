@model List<ProjectSS.Web.Models.InventoryViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>
    List of Items
    <a class="btn btn-labeled btn-success btn-sm pull-right" href="@Url.Action("Create", "Inventory")">
        <span class="btn-label"><i class="fa fa-plus"></i></span>
        ADD ITEM
    </a>
    <ol class="breadcrumb">
        <li>
            <a href="/Home">Home</a>

        </li>
        <li class="active">Inventory</li>
    </ol>
</h3>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table id="datatable1" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Model</th>
                            <th>Serial Number</th>
                            <th>Location</th>
                            <th>costodian</th>
                            <th>Quantity</th>
                            <th>Modified Date</th>
                            <th>ModifiedBy</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if (item.IsDeleted != true)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Brand</td>
                                        <td>@item.ItemModel</td>
                                        <td>@item.SerialNo</td>
                                        <td>@item.Location</td>
                                        <td>@item.Costodian</td>
                                        <td>@item.Quantity</td>
                                        @if (item.ModifiedBy != null)
                                        {
                                            <td>@item.ModifiedDate</td>
                                        }
                                        else
                                        {
                                            <td>@item.CreatedDate</td>
                                        }
                                        @if (!item.ModifiedBy.IsEmpty())
                                        {
                                          <td>@item.ModifiedBy</td>
                                        }
                                        else
                                        {
                                            <td>@item.CreatedBy</td>
                                        }
                                        <td>
                                            <a data-toggle="tooltip" data-placement="top" title="Edit" href="@Url.Action("Edit", "Inventory", new { id = item.Id })" class="btn btn-primary btn-xs"><i class="icon-menu"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
    <script type="text/javascript">
        $(document).ready(function () {
            if ('@TempData["Error"]' != "") {
                $.notify('@TempData["Error"]', "danger");
            }
            if ('@TempData["Success"]' != "") {
                $.notify('@TempData["Success"]', "success");
            }
            if ('@TempData["Info"]' != "") {
                $.notify('@TempData["Info"]', "info");
            }
            if ('@TempData["Warning"]' != "") {
                $.notify('@TempData["Warning"]', "warning");
            }
        });
    </script>
}